<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Dashboard - Overview</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Smart Meters -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">No of Users</h2>
      <div class="flex justify-between items-center">
        <div>
          <p class="text-4xl font-bold text-primary"><%= noOfUsers %></p>
          <p class="text-gray-500">Total Numbers</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-green-500"><%= noOfUsersOn %></p>
          <p class="text-gray-500">Actively On</p>
        </div>
      </div>
    </div>

    <!-- EMS Control Unit -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Total Products</h2>
      <div class="flex justify-between items-center">
        <div>
          <p class="text-4xl font-bold text-primary"><%= noOfProducts %></p>
          <p class="text-gray-500">Total no of products</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-green-500"><%= noOfProductsBought || 0 %></p>
          <p class="text-gray-500">Total Number of products bought</p>
        </div>
      </div>
    </div>

    <!-- Grid Interface -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Amount Made</h2>
      <div class="flex flex-col gap-5 justify-between items-center">
        <div>
          <p class="text-4xl font-bold text-primary"><%= amountMade %></p>
          <p class="text-gray-500">Amount Made</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-green-500"><%= totalAmountMadeService %></p>
          <p class="text-gray-500">Total Amount made + Service Fee</p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-span-3">
    <div class="py-10">
      <h2 class="text-2xl font-bold mb-4">Users</h2>
      <table class="w-full border-collapse">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-2 text-left">Full Name</th>
            <th class="px-4 py-2 text-left">Email</th>
            <th class="px-4 py-2 text-left">Type</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= user.fullName %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2"><%= user.type %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
