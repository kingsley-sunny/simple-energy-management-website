<!-- Header -->
<header class="bg-primary text-white p-4">
  <div class="py-2 px-2 mx-auto flex justify-between items-center">
    <h1 class="text-3xl font-extrabold">Admin Dashboard</h1>
    <button id="menuToggle" class="md:hidden">
      <svg
        class="w-6 h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>

    <div class="hidden lg:flex space-x-8 items-center">
      <p class="text-lg hidden lg:block">Welcome <%= user?.fullName %></p>

      <% if (user.type === 'student') { %>
      <span class="bg-green-500 text-white rounded-full px-3 py-1 text-sm font-semibold"
        >Student</span
      >
      <% } else if (user.type === 'supervisor') { %>
      <span class="bg-yellow-500 text-white rounded-full px-3 py-1 text-sm font-semibold"
        >Supervisor</span
      >
      <% } %> <% if (user.screening_status) { %>
      <div class="">
        <span class="ml-6">Screening Status: </span>
        <span
          class="<%= { 'in progress': 'bg-blue-500', 'not started': 'bg-gray-500', failed: 'bg-red-500', success: 'bg-green-500', }[user.screening_status] %> text-white rounded-full px-3 py-1 text-sm font-semibold"
        >
          <%= user.screening_status %>
        </span>
      </div>
      <% } %>
    </div>
  </div>
</header>
