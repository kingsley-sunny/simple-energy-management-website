<div class="min-h-screen py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold">My Houses</h1>
  </div>

  <section class="py-20 relative bg-black hidden">
    <div class="absolute inset-0">
      <img
        src="./imgs/earth-at-night.jpg"
        alt="Earth at night"
        class="w-full h-full object-cover opacity-70"
      />
    </div>
    <div class="relative container z-10 mx-auto px-4 h-full flex items-center">
      <div class="text-white">
        <p class="text-xl font-semibold mb-8">View your houses and control your solar panels</p>
        
          href="/dashboard/houses"
          class="bg-green-600 text-white px-6 py-3 inline-block hover:bg-green-700 transition"
        >
          Get started
        </a>
      </div>
    </div>
  </section>

  <!-- Houses Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% userHouses.forEach(userHouse => { %>
      <a
        href="/dashboard/houses/<%= userHouse.id %>"
        class="bg-white border rounded-lg shadow-lg overflow-hidden transform transition duration-200 hover:scale-105"
      >
        <!-- House Image -->
        <div class="aspect-w-3 aspect-h-2">
          <% if (userHouse.photoUrl) { %>
          <img
            src="/uploads/<%= userHouse.photoUrl %>"
            alt="<%= userHouse.address %>"
            class="w-full h-48 object-cover"
          />
          <% } else { %>
          <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
            <svg
              class="h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </div>
          <% } %>
        </div>

        <!-- House Info -->
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= userHouse.address %></h3>

          <div class="grid grid-cols-2 gap-2 text-sm text-gray-600 mb-4">
            <div><span class="font-medium">City:</span> <%= userHouse.city %></div>
            <div><span class="font-medium">Country:</span> <%= userHouse.country %></div>
            <div><span class="font-medium">Meter No:</span> <%= userHouse.meterNo %></div>
          </div>

         
         
        </div>
      </a>
      <% }); %>
    </div>

    <!-- No Houses Message -->
    <% if (userHouses.length === 0) { %>
    <div class="text-center py-12">
      <div class="bg-blue-600/20 rounded-lg p-8 inline-block">
        <svg
          class="mx-auto h-12 w-12 text-blue-200"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
          />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-white">No Houses Found</h3>
        <p class="mt-2 text-blue-200">We couldn't find any houses matching your criteria.</p>
      </div>
    </div>
    <% } %>
  </div>
</div>