<div class="min-h-screen py-10 max-w-7xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">My Grid Installations</h1>
  </div>

  <!-- Products Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% products.forEach(product => { %>
      <a
        href="/dashboard/products/<%= product.id %>"
        class="bg-white border rounded-lg shadow-lg overflow-hidden transform transition duration-200 hover:scale-105 block"
      >
        <!-- Product Image -->
        <div class="aspect-w-3 aspect-h-2">
          <% if (product.photoUrl) { %>
          <img
            src="/uploads/<%= product.photoUrl %>"
            alt="<%= product.name %>"
            class="w-full h-48 object-cover"
          />
          <% } else { %>
          <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
            <svg
              class="h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </div>
          <% } %>
        </div>

        <!-- Product Info -->
        <div class="p-4">
          <div class="flex items-center justify-between mb-2">
            <span
              class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary"
            >
              <%= product.type %>
            </span>
            <span class="text-sm text-gray-500">Model: <%= product.model %></span>
          </div>

          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= product.name %></h3>

          <div class="grid grid-cols-2 gap-2 text-sm text-gray-600 mb-4">
            <div><span class="font-medium">Amp:</span> <%= product.amp %></div>
            <div><span class="font-medium">Watt:</span> <%= product.watt %></div>
            <div><span class="font-medium">Stock:</span> <%= product.quantity %></div>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div>
              <p class="text-lg font-bold text-gray-900">N<%= product.price.toFixed(2) %></p>
              <p class="text-sm text-gray-500">
                +N<%= product.serviceFee.toFixed(2) %> service fee
              </p>
            </div>
          </div>
        </div>
      </a>
      <% }); %>
    </div>

    <!-- No Products Message -->
    <% if (products.length === 0) { %>
    <div class="text-center py-12">
      <div class="bg-blue-600/20 rounded-lg p-8 inline-block">
        <svg
          class="mx-auto h-12 w-12 text-blue-200"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
          />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-white">No Products Found</h3>
        <p class="mt-2 text-blue-200">We couldn't find any products matching your criteria.</p>
      </div>
    </div>
    <% } %>
  </div>
</div>
