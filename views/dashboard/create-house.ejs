<div class="items-center justify-center min-h-screen bg-gray-100">
  <div class="p-8 rounded-lg w-full">
    <h2 class="text-3xl font-bold text-center text-primary mb-6">Add Your House</h2>
    <form action="#" method="POST" enctype="multipart/form-data" class="space-y-6">
      <div class="grid lg:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700"
            >Name of the house</label
          >
          <input
            type="text"
            id="name"
            name="name"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>
        <div>
          <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
          <input
            type="text"
            id="address"
            name="address"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>
        <div>
          <label for="state" class="block text-sm font-medium text-gray-700">State</label>
          <input
            type="text"
            id="state"
            name="state"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>
        <div>
          <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
          <input
            type="text"
            id="country"
            name="country"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>
        <div>
          <label for="meterNo" class="block text-sm font-medium text-gray-700">Meter Number</label>
          <input
            type="number"
            id="meterNo"
            name="meterNo"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>

        <div>
          <label for="photoUrl" class="block text-sm font-medium text-gray-700">Photo URL</label>
          <input
            type="file"
            id="photoUrl"
            name="file"
            required
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary"
          />
        </div>
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-primary text-white px-4 py-2 rounded-lg shadow-lg font-semibold hover:bg-primary transition duration-300"
        >
          Add House
        </button>
      </div>
    </form>
  </div>
</div>
